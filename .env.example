# ============================================================
# Local Development (dotnet run)
# ============================================================

# Database (PostgreSQL)
CONNECTIONSTRINGS__DEFAULTCONNECTION=Host=localhost;Database=aspcleanarchitecture;Username=postgres;Password=postgres

# JWT Authentication
JWT__SECRETKEY=your-secret-key-must-be-at-least-32-characters-long
JWT__ISSUER=ASPCleanArchitecture
JWT__AUDIENCE=ASPCleanArchitecture
JWT__ACCESSTOKENEXPIRATIONMINUTES=15
JWT__REFRESHTOKENEXPIRATIONDAYS=7

# Security
SECURITY__ENFORCEHTTPS=true

# CORS (comma-separated origins, supports wildcards like https://*.example.com)
CORS__ALLOWEDORIGINS=https://yourdomain.com,https://*.yourdomain.com

# Rate Limiting (Global applies to all requests, Policies are named limits)
RATELIMITING__GLOBAL__LIMIT=100
RATELIMITING__GLOBAL__WINDOW=60
RATELIMITING__POLICIES__AUTH__LIMIT=5
RATELIMITING__POLICIES__AUTH__WINDOW=60
RATELIMITING__POLICIES__API__LIMIT=30
RATELIMITING__POLICIES__API__WINDOW=60

# Graceful Shutdown
GRACEFULSHUTDOWN__TIMEOUTSECONDS=30

# Email (SMTP)
EMAIL__ENABLED=false
EMAIL__HOST=smtp.example.com
EMAIL__PORT=587
EMAIL__USESSL=true
EMAIL__USERNAME=
EMAIL__PASSWORD=
EMAIL__FROMADDRESS=noreply@example.com
EMAIL__FROMNAME=Application

# Notifications
NOTIFICATIONS__ENABLED=false
NOTIFICATIONS__MAXRETRYCOUNT=3
NOTIFICATIONS__RETRYDELAYSECONDS=30

# Telemetry (OpenTelemetry)
TELEMETRY__ENABLED=false
TELEMETRY__ENVIRONMENT=development
TELEMETRY__OTLPENDPOINT=
TELEMETRY__PROMETHEUSENDPOINT=false
TELEMETRY__CONSOLEEXPORTER=false

# Caching
CACHING__ENABLED=false
CACHING__PROVIDER=Memory
CACHING__REDIS__CONNECTIONSTRING=localhost:6379
CACHING__DEFAULTEXPIRATIONMINUTES=5

# ============================================================
# Docker Compose (docker compose up)
# ============================================================

# Env
ASPNETCORE_ENVIRONMENT=Development

# Database
POSTGRES_DB=aspcleanarchitecture
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-database-password

# JWT
JWT_SECRET_KEY=your-secret-key-must-be-at-least-32-characters-long
JWT_ISSUER=ASPCleanArchitecture
JWT_AUDIENCE=ASPCleanArchitecture
JWT_ACCESS_TOKEN_EXPIRATION_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRATION_DAYS=7

# Security
SECURITY_ENFORCE_HTTPS=true

# Cors
CORS_ALLOWED_ORIGINS=

# Email
EMAIL_ENABLED=false
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587

# Notifications
NOTIFICATIONS_ENABLED=false

# Telemetry
TELEMETRY_ENABLED=false
TELEMETRY_OTLP_ENDPOINT=

# Cache
CACHING_ENABLED=false
CACHING_PROVIDER=Memory
CACHING_REDIS_CONNECTION_STRING=redis:6379
