{
  "ConnectionStrings": {
    "DefaultConnection": ""
  },
  "Jwt": {
    "SecretKey": "YOUR-SECRET-KEY-MUST-BE-AT-LEAST-32-CHARACTERS-LONG",
    "Issuer": "ASPCleanArchitecture",
    "Audience": "ASPCleanArchitecture",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "Security": {
    "EnforceHttps": true
  },
  "Cors": {
    "AllowedOrigins": []
  },
  "RateLimiting": {
    "Global": {
      "Limit": 100,
      "Window": 60
    },
    "Policies": {
      "Auth": { "Limit": 5, "Window": 60 },
      "Api": { "Limit": 30, "Window": 60 },
      "Relaxed": { "Limit": 60, "Window": 60 },
      "Strict": { "Limit": 10, "Window": 60 }
    }
  },
  "GracefulShutdown": {
    "TimeoutSeconds": 30
  },
  "BackgroundJobs": {
    "Provider": "Instant"
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {CorrelationId} {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "Caching": {
    "Enabled": false,
    "Provider": "Memory",
    "Redis": {
      "ConnectionString": "localhost:6379"
    },
    "DefaultExpirationMinutes": 5
  },
  "AllowedHosts": "*",
  "ApiVersioning": {
    "Versions": [
      {
        "Name": "v1",
        "Version": "1.0.0",
        "Status": "Active",
        "DeprecationDate": null,
        "SunsetDate": null,
        "Title": "API v1",
        "Description": "Active release"
      }
    ],
    "Scalar": {
      "Title": "Web API Endpoints",
      "Theme": "Default",
      "Layout": "Modern",
      "Servers": []
    }
  }
}
